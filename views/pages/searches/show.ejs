<!DOCTYPE html>
<html>

<head></head>

<body>
  <h1>Book Results</h1>
  <p><a href="/">Home</a></p>
  <ul>
    <% books.forEach(value => { %>
    <img src = "<%= value.thumbnail%>"> 
    <li><%= value.title %></li>
    <li><%= value.author %></li>
    <li><%= value.description %></li>


  </ul>
  
  <a href="/books/<%=value.book_id %>"><button>View more details</button></a>
  <form id="save-book" action="/books/<%=value.book_id %>" method="POST">
    <fieldset>
      <input type="hidden" name="thumbnail" value="<%= value.thumbnail %>" >
      <input type="hidden" name="book_id" value="<%= value.book_id %>" >
      <input type="hidden" name="title" value="<%= value.title %>" >
      <input type="hidden" name="author" value="<%= value.author %>" >
      <input type="hidden" name="summary" value="<%= value.description %>" >

      <input type="submit" value ='Add to library' >
    </fieldset>
  </form>  
  <% }) %>
  
  
</body>
</html>