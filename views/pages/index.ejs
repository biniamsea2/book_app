

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>

    <link rel="stylesheet" href="../styles/reset.css">
    <link rel="stylesheet" href="../styles/base.css">

</head>


<body>
    <h1>Hello World</h1>
    <form action="/searches" method="post">
        <input type="text" name="search" placeholder="Enter title or author" required>
        <fieldset>
            <label for="title">
                <span>Title</span>
                <input type="radio" name="search" value="title" required>
            </label>
        </fieldset>
        <fieldset>
            <label for="author">
                <span>Author</span>
                <input type="radio" name="search" value="author" required>
            </label>
        </fieldset>
        <button type="submit">Search Book</button>
    </form>




    <h1>Book Results</h1>
    <p>Total Number of Books: <%= sqlKey.length %></p>
    <p><a href="/">Home</a></p>
    <ul>
      <% sqlKey.forEach(value => { %>
      <img src = "<%= value.thumbnail %>"> 
      <li><%= value.title %></li>
      <li><%= value.author %></li>
      <li><%= value.summary %></li>
      <li><%= value.book_id %></li>

      <a href="/books/<%=value.book_id %>"><button>View more details</button></a>
      <% }) %>
    </ul>




</body>

</html>