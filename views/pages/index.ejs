<!DOCTYPE html>
<%- include('../partials/head') %>


<body>
<%- include('../partials/header') %>

    <h1>Best Books!</h1>
    <form action id= "formaction" ="/searches" method="post">
        <div id="search">Search book by Title or Author</div>
        <input type id= "input" ="text" name="search" placeholder ="Enter title or author" required>
        <fieldset>
            <label for="title">
                <span>Title</span>
                <input type ="radio" name="search" value="title" required>
            </label>
        </fieldset>
        <fieldset>
            <label for="author">
                <span>Author</span>
                <input type="radio" name="search" value="author" required>
            </label>
        </fieldset>
        <button type="submit">Search Book</button>
    </form>



    <% if(sqlKey=false){ %>

        <h1>Book Results</h1>
        <p>Total Number of Books: <%= sqlKey.length %></p>
        <p><a href="/">Home</a></p>

        <% sqlKey.forEach(value => { %>
            <ul>
                <img src = "<%= value.thumbnail %>"> 
                <li><%= value.title %></li>
                <li><%= value.author %></li>
                <li><%= value.summary %></li>
                <li><%= value.book_id %></li>

                <a href="/books/<%=value.book_id %>"><button>View more details</button></a>
            </ul>
        <% }) %>
    <% }else if(!sqlKey){ %>

        <p>Nothing in library? Search a book now!</p>
    <% } %>

</body>
</html>